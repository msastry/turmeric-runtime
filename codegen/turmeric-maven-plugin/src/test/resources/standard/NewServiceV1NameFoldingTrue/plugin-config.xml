<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.ebay.soa.interface</groupId>
  <artifactId>AuthenticationServicev2</artifactId>
  <version>1.0.0</version>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.4</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.ebay.soa</groupId>
      <artifactId>SOATools</artifactId>
      <version>1.0.0.turmeric-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.ebay.soa</groupId>
      <artifactId>SOAClient</artifactId>
      <version>1.0.0.turmeric-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-xjc</artifactId>
      <version>2.1.2</version>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>meta-src</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.ebayopensource.turmeric.plugins</groupId>
        <artifactId>turmeric-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>gen-interface-wsdl</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <packageName>com.ebayopensource.services.authenticationservice.intf</packageName>
          <enableNamespaceFolding>true</enableNamespaceFolding>
          <verbose>true</verbose>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>