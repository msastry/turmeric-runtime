<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ebayopensource.test</groupId>
  <artifactId>sampleErrorLibrary</artifactId>
  <version>1-SNAPSHOT</version>
  <dependencies>
    <dependency>
      <groupId>org.ebayopensource.turmeric.runtime</groupId>
      <artifactId>common-type-library</artifactId>
      <version>1.0.0.0-SNAPSHOT</version>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>meta-src</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>turmeric-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>gen-errorlibrary</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <verbose>true</verbose>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
