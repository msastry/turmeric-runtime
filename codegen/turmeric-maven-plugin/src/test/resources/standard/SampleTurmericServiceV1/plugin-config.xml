<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.ebay.soa.interface</groupId>
  <artifactId>SampleTurmericServiceV1</artifactId>
  <version>1.0.0</version>
  <dependencies>
    <dependency>
      <groupId>com.ebay.soa</groupId>
      <artifactId>SOATools</artifactId>
    </dependency>
    <dependency>
      <groupId>com.ebay.soa</groupId>
      <artifactId>SOAClient</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-xjc</artifactId>
    </dependency>
    <dependency>
      <groupId>org.ebayopensource.turmeric.runtime</groupId>
      <artifactId>common-type-library</artifactId>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>meta-src</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.ebayopensource.turmeric.plugins</groupId>
        <artifactId>turmeric-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>gen-interface-wsdl</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <verbose>true</verbose>
          <serviceName>SampleTurmericServiceV1</serviceName>
          <packageName>org.ebayopensource.turmeric.v1.services.sampleturmericservicev1</packageName>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
