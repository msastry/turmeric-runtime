<assembly>
	<id>bin</id>
	<formats>
		<format>dir</format>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
	</fileSets>
	
	<dependencySets>
	    <dependencySet>
	    	<outputDirectory>/lib/runtime</outputDirectory>
	    	<unpack>false</unpack>
	    	<includes>
	    		<include>org.ebayopensource.turmeric.runtime:*</include>
	    	</includes>
	    	<excludes>
	    		<exclude>*:war</exclude>
	    	</excludes>
	    </dependencySet>
		<dependencySet>
			<outputDirectory>/lib/maven-plugin</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>
					*:turmeric-maven-plugin
				</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/lib/codegen-tools</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>
					*:codegen-tools
				</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/lib/libraries</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>
					*:common-type-library
				</include>
				<include>
					*:runtime-error-library
				</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/lib/thirdParty</outputDirectory>
			<unpack>false</unpack>
			<excludes>
				<exclude>
					org.ebayopensource.turmeric.runtime:*
				</exclude>
				<exclude>
					org.ebayopensource.turmeric.client:*
				</exclude>
				<exclude>
					org.apache.maven:*
				</exclude>
				<exclude>
					org.apache.ant:*
				</exclude>
				<exclude>
					*:hamcrest*
				</exclude>
				<exclude>
				    *:junit*
				</exclude>
				<exclude>
					*:codegen-tools
				</exclude>
				<exclude>
					*:turmeric-maven-plugin				
				</exclude>
				<exclude>
					*:runtime-error-library
				</exclude>
				<exclude>
					*:common-type-library
				</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/webapp</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.ebayopensource.turmeric.runtime:echoservice-example:war</include>
                <include>org.ebayopensource.turmeric.client:ExampleEchoServiceConsumer</include>
			</includes>
			<excludes>
				<exclude>
					org.ebayopensource.turmeric.runtime:*:jar
				</exclude>
				<exclude>
					org.apache.maven:*
				</exclude>
				<exclude>
					org.apache.ant:*
				</exclude>
				<exclude>
					*:hamcrest*
				</exclude>
				<exclude>
				    *:junit*
				</exclude>
				<exclude>
					*:codegen-tools
				</exclude>
				<exclude>
					*:turmeric-maven-plugin				
				</exclude>
				<exclude>
					*:runtime-error-library
				</exclude>
				<exclude>
					*:common-type-library
				</exclude>
			</excludes>
		</dependencySet>
                <dependencySet>
	    	   <includes>
	    	      <include>org.ebayopensource.turmeric.runtime:*:*:javadoc</include>
	    	   </includes>
                   <outputDirectory>/docs/runtime</outputDirectory>
                   <unpack>false</unpack>
                   <useTransitiveDependencies>true</useTransitiveDependencies>
                   <useProjectArtifact>false</useProjectArtifact>
                </dependencySet>
                <dependencySet>
	    	   <includes>
                      <include>*:codegen-tools:*:javadoc</include>
	    	   </includes>
                   <outputDirectory>/docs/codegen-tools</outputDirectory>
                   <unpack>true</unpack>
                   <useTransitiveDependencies>true</useTransitiveDependencies>
                   <useProjectArtifact>false</useProjectArtifact>
                </dependencySet>
                <dependencySet>
	    	   <includes>
                      <include>*:turmeric-maven-plugin:*:javadoc</include>
	    	   </includes>
                   <outputDirectory>/docs/turmeric-maven-plugin</outputDirectory>
                   <unpack>true</unpack>
                   <useTransitiveDependencies>true</useTransitiveDependencies>
                   <useProjectArtifact>false</useProjectArtifact>
                </dependencySet>
	</dependencySets>
</assembly>
